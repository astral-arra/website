---
import Footer from "../components/Footer.astro";
import MainNav from "../components/MainNav.astro";
import "../styles.css";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={`${frontmatter.title} by ${frontmatter.author}`} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{frontmatter.title}</title>
    {frontmatter.title && <meta property="og:title" content={frontmatter.title} />}
    {
      frontmatter.description && (
        <meta property="og:description" content={frontmatter.description} />
      )
    }
    {frontmatter.image && <meta property="og:image" content={frontmatter.image} />}
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
    <script src="/pagefind/pagefind-ui.js" is:inline></script>
  </head>
  <body class="bg-white text-gray-900">
    <div class="wrapper grid h-full w-full grid-cols-1 grid-rows-layout">
      <!-- Smaller Menu -->
      <MainNav url={"/blog"} class="text-sm py-2 bg-transparent" />
      
      <main class="container mx-auto px-4">
        <!-- Article Preview Structure -->
        <section class="articles">
          <div class="article-preview flex items-start space-x-4 border-b pb-4 mb-4">
            <img src="/path/to/preview-image.jpg" alt="Preview Image" class="w-32 h-auto rounded-md" />
            <div>
              <h2 class="article-header text-xl font-bold">{frontmatter.title}</h2>
              <p class="text-sm text-gray-700">Short preview text goes here...</p>
              <p class="article-tags text-xs text-gray-500">Tags: tag1, tag2, tag3</p>
            </div>
          </div>
          <!-- Repeat above block for each article -->
        </section>
        
        <!-- Individual Article -->
        <article
          class="prose prose-stone mx-auto my-16 max-w-4xl lg:prose-xl prose-p:text-justify prose-blockquote:text-right"
        >
          <h1>{frontmatter.title}</h1>
          <p class="p-0 text-sm text-stone-500">От: {frontmatter.author}</p>
          <slot />
          <p class="p-0 text-sm text-stone-500">
            публикувано на: {new Date(frontmatter.date).toLocaleDateString()}
          </p>
        </article>
      </main>
      
      <!-- Footer -->
      <Footer class="bg-transparent" />
    </div>
  </body>
</html>
